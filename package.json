{
	"name": "next-blog",
	"version": "3.1.1",
	"description": "Markdown based blog using next.js",
	"scripts": {
		"runts": "ts-node --transpile-only --project=tsconfig.json",
		"dev": "yarn runts server/server.ts",
		"posts": "yarn runts server/build-posts.ts",
		"feed": "yarn runts server/build-feed.ts",
		"typecheck": "tsc",
		"lint": "eslint . --ext .ts,.tsx",
		"build": "yarn typecheck && yarn lint && yarn posts && yarn feed && yarn next build client && yarn next export client",
		"commit": "yarn build && ./postprocess.sh"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": ">=1",
		"lint-staged": ">=8.2.1",
		"next": "^9.1.5",
		"prettier": "^2.0.5",
		"processmd": "^4.4.2",
		"standard": "^14.3.1"
	},
	"dependencies": {
		"@babel/core": "^7.4.5",
		"@next/bundle-analyzer": "^9.1.5",
		"@types/js-yaml": "^3.12.1",
		"@types/rc-tooltip": "^3.7.1",
		"@types/react": "^16.8.20",
		"@types/react-dom": "^16.8.4",
		"@types/recharts": "^1.1.16",
		"@types/styled-jsx": "^2.2.8",
		"@types/webpack": "^4.41.0",
		"@zeit/next-css": "^1.0.1",
		"@zeit/next-sass": "^1.0.1",
		"@zeit/next-typescript": "^1.1.1",
		"babel-loader": "^8.0.6",
		"eslint": "^7.3.1",
		"feed": "^4.0.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"next-routes": "^1.4.2",
		"node-sass": "^4.12.0",
		"pandoc-filter": "^2.0.0",
		"pandoc-url2cite": "^0.6.4",
		"rc-tooltip": "^4.0.0-alpha.3",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-katex": "^2.0.2",
		"react-markdown": "^4.0.8",
		"react-syntax-highlighter": "^12.2.1",
		"recharts": "^2.0.0-beta.1",
		"remark-frontmatter": "^2.0.0",
		"remark-parse": "^8.0.2",
		"remark-react": "^7.0.1",
		"remark-stringify": "^8.1.0",
		"strip-markdown": "^3.0.3",
		"styled-jsx": "^3.2.1",
		"styled-jsx-plugin-sass": "^1.0.0",
		"tachyons": "^4.11.1",
		"ts-loader": "^7.0.5",
		"ts-node": "^8.2.0",
		"tsconfig-paths-webpack-plugin": "^3.2.0",
		"typescript": "^3.9.5",
		"unified": "^9.0.0",
		"url-loader": "^4.1.0",
		"val-loader": "^2.0.2",
		"webpack": "^4.34.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 80,
		"endOfLine": "lf"
	},
	"babel": {
		"presets": [
			"next/babel",
			"@zeit/next-typescript/babel"
		]
	}
}
