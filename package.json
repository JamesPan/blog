{
	"name": "next-blog",
	"version": "3.1.1",
	"description": "Markdown based blog using next.js",
	"scripts": {
		"runts": "ts-node --transpile-only --project=tsconfig.json",
		"dev": "yarn runts server/server.ts",
		"posts": "yarn runts server/build-posts.ts",
		"feed": "yarn runts server/build-feed.ts",
		"build": "yarn posts && yarn feed && next build src && next export src",
		"commit": "yarn build && ./postprocess.sh"
	},
	"devDependencies": {
		"husky": ">=1",
		"lint-staged": ">=8.2.1",
		"next": "^8.1.1-canary.52",
		"prettier": "^1.18.2",
		"processmd": "^4.4.2",
		"standard": "^12.0.1"
	},
	"dependencies": {
		"@babel/core": "^7.4.5",
		"@next/bundle-analyzer": "^8.1.0",
		"@types/js-yaml": "^3.12.1",
		"@types/next": "^8.0.5",
		"@types/react": "^16.8.20",
		"@types/react-dom": "^16.8.4",
		"@types/recharts": "^1.1.16",
		"@zeit/next-css": "^1.0.1",
		"@zeit/next-sass": "^1.0.1",
		"@zeit/next-typescript": "^1.1.1",
		"babel-loader": "^8.0.6",
		"eslint": "^5.16.0",
		"feed": "^3.0.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"next-routes": "^1.4.2",
		"node-sass": "^4.12.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-markdown": "^4.0.8",
		"react-syntax-highlighter": "^10.3.0",
		"recharts": "^1.6.2",
		"remark-frontmatter": "^1.3.1",
		"remark-parse": "^6.0.3",
		"remark-react": "^5.0.1",
		"remark-stringify": "^6.0.4",
		"strip-markdown": "^3.0.3",
		"styled-jsx": "^3.2.1",
		"tachyons": "^4.11.1",
		"ts-loader": "^6.0.2",
		"ts-node": "^8.2.0",
		"tsconfig-paths-webpack-plugin": "^3.2.0",
		"typescript": "^3.5.2",
		"unified": "^7.1.0",
		"val-loader": "^1.1.1",
		"webpack": "^4.34.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 80,
		"endOfLine": "lf"
	},
	"babel": {
		"presets": [
			"next/babel",
			"@zeit/next-typescript/babel"
		]
	}
}
