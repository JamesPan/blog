{
	"name": "next-blog",
	"version": "3.1.1",
	"description": "Markdown based blog using next.js",
	"scripts": {},
	"devDependencies": {
		"husky": ">=1",
		"lint-staged": ">=8",
		"next": "^8.1.0",
		"prettier": "^1.18.2",
		"processmd": "^4.4.2",
		"standard": "^12.0.1"
	},
	"dependencies": {
		"@babel/core": "^7.4.5",
		"@types/next": "^8.0.5",
		"@types/react": "^16.8.19",
		"@types/react-dom": "^16.8.4",
		"@zeit/next-typescript": "^1.1.1",
		"babel-loader": "^8.0.6",
		"next-routes": "^1.4.2",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"styled-jsx": "^3.2.1",
		"ts-loader": "^6.0.2",
		"ts-node": "^8.2.0",
		"typescript": "^3.5.1",
		"val-loader": "^1.1.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"trailingComma": "all",
		"printWidth": 80,
		"endOfLine": "lf"
	},
	"babel": {
		"presets": [
			"next/babel",
			"@zeit/next-typescript/babel"
		]
	}
}
